#include <iostream>
using namespace std;

int main()
{
	// Local variables
	int num1 = 0, num2 = 0, num3 = 0, average = 0, sum = 0, difference = 0, product = 0, quotient = 0, remainder = 0;
	
	cout << "Input num1: "; cin >> num1;
	cout << "Input num2: ";	cin >> num2;
	cout << "Input num3: ";	cin >> num3;
	
	// Calculation of Average
	average = (num1 + num2 + num3) /3.0;

	// Calculating the Sum
	sum = (num1 + num2 + num3);
	
	// Calculating the Difference
	difference = (num1 - num2 - num3);

	// Calculating the Product
	product = (num1 * num2 * num3);

	// Calculating the Quotient
	quotient = (num1 / num2 / num3);
	
	// Calculating the Remainder
	remainder = (num1 % num2 % num3);
	
	// Print the Average
	cout << "The input average is " << average << endl;

	// Print the Sum
	cout << "The input sum is " << sum << endl;

	// Print the Difference
	cout << "The input difference is " << difference << endl;

	// Print the Product
	cout << "The input product is " << product << endl;

	// Print the Quotient
	cout << "The input quotient is " << quotient << endl;
	
	// Print the Remainder
	cout << "The input remainder is " << remainder << endl;
	
	;return 0;
}
